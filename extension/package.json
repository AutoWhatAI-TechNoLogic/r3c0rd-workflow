{
  "name": "workflow-use recorder",
  "description": "A browser extension that records user interactions on web pages and saves it as a JSON file.",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
