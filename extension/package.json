    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "rrweb": "^2.0.0-alpha.4",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.16"
  },
  "devDependencies": {
    "@types/chrome": "^0.1.27",
    "@types/node": "^24.9.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@wxt-dev/module-react": "^1.1.5",
